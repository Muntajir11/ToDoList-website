<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TO-DO List</title>
    <link rel="stylesheet" href="styles/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>


    <style>
        .task-list-container {
            max-height: 400px;
            overflow-y: auto;
            align-items: start;

        }


        .added-text input[type="checkbox"] {
            height: 30px;
            width: 30px;
        }

        .added-text label {
            text-align: left;
        }
    </style>

</head>

<body>
    <div class="logo">

        <% if (imagePath) { %>
            <img src="<%=imagePath %>" class="icon" alt="icon">

            <% } %>

                <h1 style="color:  #EFEFEF;">To Do List</h1>
    </div>



    <div class="container">
        <form method="POST" id="task-form" action="/submit">
            <div style="width: max-content;" class="input-container">


                <input id="todo-input" type="text" name="todo" placeholder="Add Item">
                <button type="submit" id="add_item" class="button">Add</button>

            </div>
        </form>

    </div>


    <div class="task-list-container">
        <div class="added-text">

        </div>
    </div>







    <script>
        const taskForm = document.getElementById('task-form');
        const todoInput = document.getElementById('todo-input');
        const addedText = document.querySelector('.added-text');

        taskForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const taskText = todoInput.value.trim();
            if (taskText !== '') {
                const taskItem = document.createElement('div');
                taskItem.className = 'todo-item';
                taskItem.innerHTML = `
                <input type="checkbox" id="taskCheckbox" name="taskCheckbox">
                <label for="taskCheckbox">${taskText}</label>
            `;
                addedText.appendChild(taskItem);
                todoInput.value = '';
            }
        });
    </script>

</body>

</html>